# Standardized configuration for your text editor.
# See: http://EditorConfig.org

# This is the default for the whole project.
root = true

# Unix-style newlines with a newline ending every file.
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
indent_size = 2
